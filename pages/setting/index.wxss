.layout {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.column {
  width: 90%;
  margin-top: 50rpx;
}
.logoStyle {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.circle {
  width: 200rpx;
  height: 200rpx;
  background-color: #F5F5F5;
  border-radius: 50%;
  margin: 40rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.circle image {
  width: 150rpx;
  height: 150rpx;
}
.colStyle {
  display: flex;
  justify-content: space-between;
}
.btnStyle button {
  width: 40% !important;
  position: absolute;
  border-radius: 30rpx;
  left: 50%;
  bottom: 15%;
  transform: translateX(-50%);
}
.rateStyle {
  display: flex;
  height: 100%;
  justify-content: center;
  align-items: center;
}
.textStyle {
  display: flex;
  align-items: center;
  justify-content: center;
}
.textStyle view {
  margin: 80rpx;
  line-height: 2rem;
}
.achieve {
  color: #969696;
  font-weight: 500;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}
.container {
  position: relative;
  top: 120rpx;
  left: 60rpx;
}
.container input {
  border-bottom: 2rpx solid black;
  width: 80%;
}
.popupTitle {
  font-size: 46rpx;
  margin-bottom: 30rpx;
}
