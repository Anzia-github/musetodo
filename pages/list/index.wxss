page {
  width: 100%;
  height: 100%;
}

.layout {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 50% 50%;
  height: 100%;
}

.one {
  border-right: 5rpx solid #F7F7F7;
  border-bottom: 5rpx solid #F7F7F7;
}

.one .title {
  background-color: #FEF5F5;
}

.two {
  border-bottom: 5rpx solid #F7F7F7;
}

.two .title {
  background-color: #FDF5E6;
}

.three {
  border-right: 5rpx solid #F7F7F7;
  border-bottom: 5rpx solid #F7F7F7;
}

.three .title {
  background-color: #ccffff;
}

.four {
  border-bottom: 5rpx solid #F7F7F7;
}

.four .title {
  background-color: #F7F7F7;
}

.title {
  display: block;
  font-size: 30rpx;
  padding: 10rpx;
  font-weight: 200;
}

.add {
  position: fixed;
  bottom: 60rpx;
  right: 25rpx;
  height: 120rpx;
  width: 120rpx;
  border-radius: 50%;
  background-color: #ff3300;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 10rpx 10rpx #D5D5D5;
}

.add image {
  width: 50rpx;
  height: 50rpx;
}

checkbox .wx-checkbox-input {
  width: 30rpx;
  height: 30rpx;
  border-color: #757373;
  vertical-align: middle;
  margin: 20rpx;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #bebebe;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 30rpx;
  height: 30rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 22rpx;
  color: #ffffff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}

.checkText {
  text-align: center;
  font-weight: 100;
  font-size: 30rpx;
}

::-webkit-scrollbar {
  display: none;
  width: 0;
  height: 0;
  color: transparent;
}

.delete {
  display: block;
  position: relative;
  top: 16%;
  font-size: 1.25rem;
  color: #FF7256;
}

.achieve {
  color: #969696;
  font-weight: 100;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
}

.form_style {
  width: 90%;
  margin: 0 auto;
  margin-top: 120rpx;
}

.sort {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

van-dropdown-menu {
  box-shadow: 0;
}